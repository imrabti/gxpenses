<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:f="urn:import:com.nuvola.gxpenses.client.web.application.ui"
             xmlns:p2="urn:import:com.google.gwt.user.datepicker.client">

    <ui:with field="resource" type="com.nuvola.gxpenses.client.resource.Resources"/>

    <g:HTMLPanel>
        <g:Grid width="275px" height="170px">
            <g:row>
                <g:customCell>
                    <g:Label text="Payee" styleName="{resource.generalStyleCss.label}"/>
                </g:customCell>
                <g:customCell>
                    <g:SuggestBox ui:field="payee" width="200px" styleName="{resource.generalStyleCss.textInput}"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Label text="Type" styleName="{resource.generalStyleCss.label}"/>
                </g:customCell>
                <g:customCell>
                    <g:ValueListBox ui:field="type" width="100px"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Label text="Tags" styleName="{resource.generalStyleCss.label}"/>
                </g:customCell>
                <g:customCell>
                    <f:MultipleSuggestBox ui:field="tags" width="200px"
                                          styleName="{resource.generalStyleCss.textInput}"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Label text="Date" styleName="{resource.generalStyleCss.label}"/>
                </g:customCell>
                <g:customCell>
                    <p2:DateBox ui:field="date" width="150px" styleName="{resource.generalStyleCss.textInput}"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Label text="Amount" styleName="{resource.generalStyleCss.label}"/>
                </g:customCell>
                <g:customCell>
                    <g:DoubleBox ui:field="amount" width="150px" styleName="{resource.generalStyleCss.textInput}"/>
                </g:customCell>
            </g:row>
        </g:Grid>
    </g:HTMLPanel>
</ui:UiBinder>

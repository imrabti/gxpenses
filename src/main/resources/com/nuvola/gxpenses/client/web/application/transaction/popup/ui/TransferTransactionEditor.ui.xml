<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="resource" type="com.nuvola.gxpenses.client.resource.Resources"/>

    <g:HTMLPanel>
        <g:Grid width="286px" height="109px">
            <g:row>
                <g:customCell>
                    <g:Label text="Source account" styleName="{resource.generalStyleCss.label}"/>
                </g:customCell>
                <g:customCell>
                    <g:ValueListBox ui:field="sourceAccount" width="180px"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Label text="Target account" styleName="{resource.generalStyleCss.label}"/>
                </g:customCell>
                <g:customCell>
                    <g:ValueListBox ui:field="targetAccount" width="180px"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Label text="Amount" styleName="{resource.generalStyleCss.label}"/>
                </g:customCell>
                <g:customCell>
                    <g:DoubleBox ui:field="amount" width="170px" styleName="{resource.generalStyleCss.textInput}"/>
                </g:customCell>
            </g:row>
        </g:Grid>
    </g:HTMLPanel>
</ui:UiBinder>

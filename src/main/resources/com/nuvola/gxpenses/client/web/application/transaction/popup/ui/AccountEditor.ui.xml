<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="resource" type="com.nuvola.gxpenses.client.resource.GxpensesRes"/>

    <g:HTMLPanel>
        <g:Grid width="275px" height="109px">
            <g:row>
                <g:customCell>
                    <g:Label text="Name" styleName="{resource.generalStyleCss.label}"/>
                </g:customCell>
                <g:customCell>
                    <g:TextBox ui:field="name" width="170px" styleName="{resource.generalStyleCss.textInput}"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Label text="Type" styleName="{resource.generalStyleCss.label}"/>
                </g:customCell>
                <g:customCell>
                    <g:ValueListBox ui:field="type" width="180px"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Label text="Initial balance" styleName="{resource.generalStyleCss.label}"/>
                </g:customCell>
                <g:customCell>
                    <g:DoubleBox ui:field="balance" width="170px" styleName="{resource.generalStyleCss.textInput}"/>
                </g:customCell>
            </g:row>
        </g:Grid>
    </g:HTMLPanel>
</ui:UiBinder>

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="resource" type="com.nuvola.gxpenses.client.resource.Resources"/>

    <g:HTMLPanel>
        <g:Grid width="275px" height="73px">
            <g:row>
                <g:customCell>
                    <g:Label text="Name" styleName="{resource.generalStyleCss.label}"/>
                </g:customCell>
                <g:customCell>
                    <g:TextBox ui:field="name" width="190px" styleName="{resource.generalStyleCss.textInput}"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Label text="Periodicity" styleName="{resource.generalStyleCss.label}"/>
                </g:customCell>
                <g:customCell>
                    <g:ValueListBox ui:field="periodicity" width="200px"/>
                </g:customCell>
            </g:row>
        </g:Grid>
    </g:HTMLPanel>
</ui:UiBinder>

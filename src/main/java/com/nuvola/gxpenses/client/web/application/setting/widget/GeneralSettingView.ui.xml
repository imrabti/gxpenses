<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	         xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:d='urn:import:com.nuvola.gxpenses.client.web.application.setting.widget.ui'>
	
	<ui:with field='resource' type='com.nuvola.gxpenses.client.resource.GxpensesRes'/>
		
	<g:HTMLPanel>	
		<d:SettingEditor ui:field="settingEditor"/>
			
		<g:HTMLPanel styleName="{resource.generalStyleCss.formButtons}">
			<g:Button ui:field="save" addStyleNames="{resource.buttonStyleCss.button} {resource.buttonStyleCss.large} {resource.buttonStyleCss.gray}">
				Save Settings
			</g:Button>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 

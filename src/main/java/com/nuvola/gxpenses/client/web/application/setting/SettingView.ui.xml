<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='resource' type='com.nuvola.gxpenses.client.resource.GxpensesRes'/>

    <ui:style>
        .centered {
            width: 550px;
            margin-top: 30px;
            margin-right: auto;
            margin-left: auto;
        }

        .errorWidth {
            width: 520px;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.centered}">
        <g:HTML ui:field="errors" styleName="{resource.generalStyleCss.errorBox} {style.errorWidth}"/>

        <g:SimplePanel ui:field="contentPanel"/>
    </g:HTMLPanel>
</ui:UiBinder> 

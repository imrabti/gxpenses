<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field='resource' type='com.nuvola.gxpenses.client.resource.GxpensesRes'/>

    <ui:style>
        .bigInput {
            maring-left: 10px;
            font-size: 13px;
            padding: 6px;
        }

        .paddingLeft {
            margin-right: 15px;
        }

        .formContainer {
            height: 280px;
            margin-left: auto;
            margin-right: auto;
        }
    </ui:style>

    <g:HTMLPanel>
        <g:Grid styleName="{style.formContainer}">
            <g:row>
                <g:customCell>
                    <g:Label text="Username" styleName="{resource.generalStyleCss.label} {style.paddingLeft}"/>
                </g:customCell>
                <g:customCell>
                    <g:TextBox ui:field="userName" width="280px"
                               styleName="{resource.generalStyleCss.textInput} {style.bigInput}"
                               readOnly="true"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Label text="First Name" styleName="{resource.generalStyleCss.label} {style.paddingLeft}"/>
                </g:customCell>
                <g:customCell>
                    <g:TextBox ui:field="firstName" width="280px"
                               styleName="{resource.generalStyleCss.textInput} {style.bigInput}"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Label text="Last Name" styleName="{resource.generalStyleCss.label} {style.paddingLeft}"/>
                </g:customCell>
                <g:customCell>
                    <g:TextBox ui:field="lastName" width="280px"
                               styleName="{resource.generalStyleCss.textInput} {style.bigInput}"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Label text="Email" styleName="{resource.generalStyleCss.label} {style.paddingLeft}"/>
                </g:customCell>
                <g:customCell>
                    <g:TextBox ui:field="email" width="280px"
                               styleName="{resource.generalStyleCss.textInput} {style.bigInput}"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Label text="Currency" styleName="{resource.generalStyleCss.label} {style.paddingLeft}"/>
                </g:customCell>
                <g:customCell>
                    <g:ValueListBox ui:field="currency" width="135px"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Label text="Page size" styleName="{resource.generalStyleCss.label} {style.paddingLeft}"/>
                </g:customCell>
                <g:customCell>
                    <g:ValueListBox ui:field="pageSize" width="135px"/>
                </g:customCell>
            </g:row>
        </g:Grid>
    </g:HTMLPanel>
</ui:UiBinder>
